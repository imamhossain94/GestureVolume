<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.newagedevs.gesturevolume.view.ui.main.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="?attr/bg_card">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp"
                                android:maxLines="2"
                                android:text="Please select your handedness or the gravity of the handler" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/bg_rounded"
                                android:drawablePadding="15dp"
                                android:gravity="center|start"
                                android:onClick="@{viewModel.gravityPickerLand}"
                                android:padding="15dp"
                                android:text="@{viewModel.gravityLand}"
                                app:drawableStart="@{viewModel.gravityIcon}"
                                android:scaleX="1"
                                android:scaleY="1"
                                app:drawableTint="?attr/icon_color"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp"
                                android:maxLines="2"
                                android:text="Please select the color and transparency of the handler" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/bg_rounded"
                                android:drawablePadding="15dp"
                                android:gravity="center|start"
                                android:padding="15dp"
                                android:onClick="@{viewModel.colorPickerLand}"
                                android:tag="Symbol Color"
                                app:colorCode="@{viewModel.colorLand}"
                                app:drawableStartCompat="@drawable/ic_color_palette"
                                app:drawableTint="?attr/icon_color"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp"
                                android:maxLines="2"
                                android:text="Please select the width or size of the handler" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/bg_rounded"
                                android:drawablePadding="15dp"
                                android:gravity="center|start"
                                android:onClick="@{viewModel.sizePickerLand}"
                                android:padding="15dp"
                                android:text="@{viewModel.sizeLand}"
                                app:drawableStart="@{viewModel.sizeIconLand}"
                                android:scaleX="1"
                                android:scaleY="1"
                                app:drawableTint="?attr/icon_color"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="0dp"
                                android:layout_marginBottom="5dp"
                                android:maxLines="2"
                                android:text="Please select the width or thickness of the handler" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?attr/bg_rounded"
                                android:drawablePadding="15dp"
                                android:gravity="center|start"
                                android:onClick="@{viewModel.widthPickerLand}"
                                android:padding="15dp"
                                android:text="@{viewModel.widthLand}"
                                app:drawableStart="@{viewModel.widthIconLand}"
                                android:scaleX="1"
                                android:scaleY="1"
                                app:drawableTint="?attr/icon_color"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>