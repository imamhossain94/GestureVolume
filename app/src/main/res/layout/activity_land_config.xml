<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.newagedevs.gesturevolume.view.ui.main.MainViewModel" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:toast="@{vm.toast}"
        tools:context=".view.ui.DashboardActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/backgroundColor"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/backgroundColor"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/bg_rounded_icon"
                            android:contentDescription="@string/menu"
                            android:padding="15dp"
                            android:src="@drawable/ic_x_close"
                            android:onClick="@{vm.finishLandActivity}"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="?attr/icon_color"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/gesture_volume"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/bg_rounded_icon"
                            android:contentDescription="@string/menu"
                            android:padding="15dp"
                            android:src="@drawable/ic_check"
                            android:onClick="@{vm.submitDataLand}"
                            android:clickable="true"
                            android:focusable="true"
                            app:tint="?attr/icon_color"/>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardBackgroundColor="#EBEBEB">

                        <FrameLayout
                            android:id="@+id/previewFrame"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/bg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:contentDescription="@string/system_wallpaper"
                                android:background="@color/black"
                                android:scaleType="centerCrop" />

                            <com.airbnb.lottie.LottieAnimationView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:lottie_autoPlay="true"
                                app:lottie_fileName="mobile_setting.json"
                                android:rotation="270"
                                app:lottie_loop="true"
                                app:lottie_speed="1" />

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="0dp"
                        android:text="@string/landscape_appearance_settings"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <include
                        layout="@layout/item_land_appearance_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:viewModel="@{vm}"/>

                </LinearLayout>

            </LinearLayout>


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:id="@+id/ads_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/banner_height"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="start"
            app:landscapeTouchListener="@{vm}"
            app:setTopMargin="@{vm.topMarginLand}"
            android:visibility="@{vm.gravity==`Right`? View.GONE : View.VISIBLE}">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_handler_left"
                app:imageColorFilter="@{vm.colorLand}"
                app:layoutHeight="@{vm.sizeLand}"
                app:layoutWidth="@{vm.widthLand}"
                android:contentDescription="@string/handler" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:drawableStartCompat="@drawable/ic_move"
                app:drawableTint="?attr/icon_color"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="end"
            app:landscapeTouchListener="@{vm}"
            app:setTopMargin="@{vm.topMarginLand}"
            android:visibility="@{vm.gravity==`Right`? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:drawableStartCompat="@drawable/ic_move"
                app:drawableTint="?attr/icon_color"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_handler_right"
                app:imageColorFilter="@{vm.colorLand}"
                app:layoutHeight="@{vm.sizeLand}"
                app:layoutWidth="@{vm.widthLand}"
                android:contentDescription="@string/handler" />
        </LinearLayout>

    </FrameLayout>

</layout>










